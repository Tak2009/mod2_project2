<!DOCTYPE html>
<html>




  <head>
    <title>Mod2project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
 
   
    <% if flash[:notice] %>
    <h3><%= flash[:notice]%></h3>
    <% end %>
    <% if current_user %>
      <div class="topnav">
    <a class="active" href="#home"><%= current_user.name%></a>
    <a <%= link_to "Logout", sessions_path, method: :delete%></a>
    <a <%=link_to "Delete User", user_path(:user_id), method: :delete, data: {confirm: 'Are you sure?'} %></a>
    <% else%>
    <div class="topnav">
    <a class="active" href="#home">Home</a>
    <a <%= link_to "Login", new_session_path%></a>
    <% end %><br><br><br>


    <%= yield %>
  </body>
</html>
