<h1>Welcome to Quiz</h1>
<h3>Please choose your quize genre</h3>

<%= form_tag({action: :quiz_session}, {method: :get}) do%>
<p>
<%= label_tag :genre_id, "Genre:" %>
<%= select_tag :genre_id, options_from_collection_for_select(Genre.all, "id", "name", selected: @genre_id), include_blank: true %>
<p><br>
<%= label_tag :difficulty_id, "Challenge level:" %>
<%= select_tag :difficulty_id, options_from_collection_for_select(Difficulty.all, "id", "name", selected: @difficulty_id), include_blank: true %>
</p><br>

<%= submit_tag "Start Quiz!" %><br>

<%=link_to "Previous Results", previous_results_path%>
<% end %>
<br>
<br>

<h3>Top 10</h3>
<% @top10.each do |qr| %>
<div>
<label>Score: <%= qr.answers %></label>
<label>Player Name: <%= qr.user.name %></label>
<label>Genre Name: <%= qr.genre.name %></label>
<label>Challenge Levele: <%= qr.difficulty.name %></label>
</div>
<% end %>
